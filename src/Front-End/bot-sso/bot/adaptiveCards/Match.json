{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "text": "Woof! We found a lunch buddy for you today."
    },
    {
      "type": "ColumnSet",
      "columns": [
       {
        "type": "Column",
        "items": [
         {
          "type": "Image",
          "style": "Person",
          "altText": "Profile picture",
          "size": "Small",
          "id":"profilePicture"
         }
        ],
        "width": "auto"
       },
       {
        "type": "Column",
        "items": [
         {
          "type": "TextBlock",
          "weight": "Bolder",
          "color": "accent",
          "size": "large",
          "id":"fullName",
          "text": "${$root.person.firstname} ${$root.person.lastname}",
          "wrap": true
         },
         {
          "type": "TextBlock",
          "spacing": "None",
          "text": "${$root.person.title}",
          "isSubtle": true,
          "id":"title",
          "wrap": true
         },
         {
          "type": "TextBlock",
          "spacing": "None",
          "text": "${$root.person.team}",
          "isSubtle": true,
          "id":"team",
          "wrap": true
         },
         {
          "type": "TextBlock",
          "spacing": "None",
          "text": "${$root.person.location}",
          "isSubtle": true,
          "id":"location",
          "wrap": true
         }
        ],
        "width": "stretch"
       },
       {
        "type": "Column",
        "items": [
          {
            "type": "TextBlock",
            "weight": "Bolder",
            "color": "accent",
            "size": "extraLarge",
            "id":"compatibilityScore",
            "text": "90%",
            "wrap": true
           },
           {
            "type": "TextBlock",
            "text": "Match",
            "color": "accent",
            "size": "medium",
            "wrap": true
           }
        ],
        "width": "auto",
        "verticalContentAlignment": "Center",
        "horizontalAlignment": "Center"
       }
      ]
    },
    {
      "type": "FactSet",
      "id":"favoriteFood",
      "facts": [
        {
          "title": "Favorite Food:",
          "value": "${$root.person.favoriteFood.fav1} and ${$root.person.favoriteFood.fav2}"
        }
      ]
    },
    {
      "type": "FactSet",
      "id":"hobbies",
      "facts": [
        {
          "title": "Hobbies:",
          "value": "${$root.person.hobbies.hobby1} and ${$root.person.hobbies.hobby2}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Chat with ${$root.person.firstname}",
      "id":"btnChat",
      "style":"positive",
      "url": "https://teams.microsoft.com/l/chat/0/0?users=${$root.person.personAlias}&message=${newMessage}"
    },
    {
      "type": "Action.Submit",
      "title": "Decline",
      "style":"destructive",
      "id": "btnDecline",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "You declined matching with this person.",
          "text": "optout"
        }
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}
