{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "color": "accent",
      "size": "large",
      "text": "Woof! Welcome to the Lunch Buddy app.",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "text": "We will ask a couple of multiple choice questions to match you with a lunch buddy every time you need one.",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Answer Questionnaire",
      "verb": "startQuestionnaire",
      "data": "${myUser}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}
